!!! 5
%html{:lang => "jp"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=0"}/
    %title= content_for?(:title) ? yield(:title) : "ByTheSegao Mobile"
    = csrf_meta_tags
    = stylesheet_link_tag "mobile", :media => "all"
    %link(rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Mouse+Memoirs")
    %script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
    = javascript_include_tag 'mobile'
    = yield :head
  %body{:id => "#{params[:controller]}_#{params[:action]}"}
    = render 'layouts/smartphone_header'

    = yield

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-37357727-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();