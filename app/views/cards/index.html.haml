- content_for :head do
  = javascript_include_tag "toscawookmark", "cromoengine", "jquery.ui.widget", "jquery.fileupload", "load-image.min.js", "canvas-to-blob.min.js", "jquery.fileupload-fp.js", "fileupload"

%form(action="https://bythesegao.s3.amazonaws.com" method="post" enctype="multipart/form-data" class='direct-upload')
  %input{type: :hidden, name: :key}
  %input{type: :hidden, name: "AWSAccessKeyId", value: ENV['AWS_ACCESS_KEY_ID']}
  %input{type: :hidden, name: :acl, value: 'public-read'}
  %input{type: :hidden, name: :policy}
  %input{type: :hidden, name: :signature}
  %input{type: :hidden, name: :success_action_status, value: "201"}

  %input{type: :file, name: :file }
  - # You can recognize some bootstrap markup here :)
  .progress.progress-striped.active
    .bar


#cromos
  - (0..15).each do
    - @cards.each do |card|
      .cromo{:style => "height:#{card.height}px; display:none"}
        .inside
          = image_tag card.picture.url
          .comment
            %p= card.comment
