- content_for :head do
  = javascript_include_tag "toscawookmark", "cromoengine"

.top-buttons
  %a.btn.btn-large{:href => cards_path, :class => ("active" if current_page?(cards_path) || current_page?(root_path))}
    +Votados 
  %a.btn.btn-large{:href => nuevos_cards_path, :class => ("active" if current_page?(nuevos_cards_path))}
    +Nuevos

#cromos
  - @cards.each do |card|
    = render 'cromo', :card => card

