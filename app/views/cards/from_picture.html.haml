- content_for :head do
  = javascript_include_tag "toscawookmark", "cromoengine"
  %link(rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Waiting+for+the+Sunrise")

#titulo.container
  = image_tag @picture.url
  - if @picture.user_id == current_user.id && @picture.description.blank?
    #user-form
      #titulerForm
        Si le pones un título, me das la vida!
        %input#pictureTitle{:type => "text", :placeholder => "Ej: Un indio dando botes"}
        %a#bautizer.btn.btn-inverse{:href => "#", :data => {:id => @picture.id}}
          Bautizar
  %h3#pictureTitulaco= @picture.description
  #stats
    - if @picture.user_id == current_user.id
      %p Esta imagen la has subido tu, que lo sé yo
    - if @cards.size ==0
      %p No hay cromos todavía...
    - else
      =@cards.size 
      =@cards.size!=1?"cromos":"cromo"


#cromos
  - (0..15).each do
    - @cards.each do |card|
      .cromo{:style => "height:#{card.height}px; display:none"}
        .inside
          = image_tag card.picture.url
          .comment
            %p= card.comment
